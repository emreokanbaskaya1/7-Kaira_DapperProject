@model UpdateProductDto
@{
    ViewData["Title"] = "UpdateProduct";
}

<h3>Update Product</h3>

<form method="post">
    <input type="hidden" asp-for="ProductId"/>

    <label>Product Name</label>
    <input type="text" asp-for="Name" class="form-control" required />
    <br />
    <label>Description</label>
    <input type="text" asp-for="Description" class="form-control" required />
    <br />
    <label>Image Url</label>
    <input type="text" asp-for="ImageUrl" class="form-control" required />
    <br />
    <label>Price</label>
    <input type="number" asp-for="Price" class="form-control" required />
    <br />
    <label>Category</label>
    <select asp-for="CategoryId" class="form-control" asp-items="@ViewBag.categories" required></select>
    <br />

    <button class="btn btn-primary">Update</button>
</form>