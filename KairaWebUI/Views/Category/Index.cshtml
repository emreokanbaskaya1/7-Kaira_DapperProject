@using KairaWebUI.DTOs.CategoryDtos
@model IEnumerable<ResultCategoryDto>
@{
    ViewData["Title"] = "Index";
    int count = 0;
}

<h1>Categories</h1>

<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Category Name</th>
        <th>Actions</th>
    </tr>

    @foreach(var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td>@item.Name</td>
            <td>
                <a href="/Category/DeleteCategory/@item.CategoryId" class="btn btn-danger">Sil</a>
                <a href="/Category/UpdateCategory/@item.CategoryId" class="btn btn-info">Update</a>
            </td>
        </tr>
    }

</table>

<a href="/Category/CreateCategory/" class="btn btn-primary">Create New Category</a>
