@model UpdateCategoryDto
@{
    ViewData["Title"] = "UpdateCategory";
}

<h3>Update Category</h3>


<form method="post">
    <input asp-for="CategoryId" type="hidden"/>
    <label>Category Name</label>
    <input type="text" asp-for="Name" class="form-control" placeholder="Enter a Category Name" />
    <br />
    <button class="btn btn-primary">Save</button>
</form>


