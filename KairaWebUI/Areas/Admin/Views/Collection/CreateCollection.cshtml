@model CreateCollectionDto
@{
    ViewData["Title"] = "Create Collection";
}

<div class="page-header">
    <h2 class="page-title">Create Collection</h2>
    <p class="page-subtitle">Add a new fashion collection</p>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="admin-card">
            <div class="card-header-custom">
                <h3 class="card-title-custom">Collection Information</h3>
            </div>

            <form method="post">
                <div class="mb-3">
                    <label for="ImageUrl" class="form-label fw-bold">
                        <i class="bi bi-image me-2"></i>Image URL
                    </label>
                    <input type="text" asp-for="ImageUrl" class="form-control" 
                           placeholder="https://example.com/image.jpg" required />
                    <span asp-validation-for="ImageUrl" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label for="Title" class="form-label fw-bold">
                        <i class="bi bi-fonts me-2"></i>Title
                    </label>
                    <input type="text" asp-for="Title" class="form-control" 
                           placeholder="Enter collection title" required />
                    <span asp-validation-for="Title" class="text-danger small"></span>
                </div>

                <div class="mb-4">
                    <label for="Description" class="form-label fw-bold">
                        <i class="bi bi-text-paragraph me-2"></i>Description
                    </label>
                    <textarea asp-for="Description" class="form-control" rows="4"
                              placeholder="Enter collection description" required></textarea>
                    <span asp-validation-for="Description" class="text-danger small"></span>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-admin btn-admin-success">
                        <i class="bi bi-check-circle me-2"></i>Save Collection
                    </button>
                    <a href="/Admin/Collection/Index" class="btn btn-admin btn-secondary">
                        <i class="bi bi-x-circle me-2"></i>Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>

    <div class="col-md-4">
        <div class="admin-card" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white;">
            <h5 class="mb-3"><i class="bi bi-lightbulb me-2"></i>Tips</h5>
            <ul class="list-unstyled">
                <li class="mb-2"><i class="bi bi-check2 me-2"></i>Use high-quality images</li>
                <li class="mb-2"><i class="bi bi-check2 me-2"></i>Write compelling descriptions</li>
                <li class="mb-2"><i class="bi bi-check2 me-2"></i>Keep titles concise</li>
            </ul>
        </div>
    </div>
</div>

