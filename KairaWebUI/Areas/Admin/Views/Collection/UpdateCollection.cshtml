@model UpdateCollectionDto
@{
    ViewData["Title"] = "UpdateCollection";
}

<h3>Update Collection</h3>

<form method="post">
    <input type="hidden" asp-for="CollectionId"/>
    <label>Image Url</label>
    <input type="text" asp-for="ImageUrl" class="form-control" placeholder="Enter a Image Url" />
    <br />
    <label>Title</label>
    <input type="text" asp-for="Title" class="form-control" placeholder="Enter a Title" />
    <br />
    <label>Description</label>
    <input type="text" asp-for="Description" class="form-control" placeholder="Enter a Description" />
    <br />
    <button class="btn btn-primary">Save</button>
</form>
