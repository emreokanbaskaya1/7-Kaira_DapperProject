@model KairaWebUI.Helpers.PaginatedList<ResultCollectionDto>
@{
    ViewData["Title"] = "Collections";
}

<div class="page-header">
    <h2 class="page-title">Collections</h2>
    <p class="page-subtitle">Manage your fashion collections</p>
</div>

<div class="admin-card">
    <div class="card-header-custom">
        <div class="d-flex justify-content-between align-items-center">
            <h3 class="card-title-custom">All Collections</h3>
            <a href="/Admin/Collection/CreateCollection/" class="btn btn-admin btn-admin-primary">
                <i class="bi bi-plus-circle me-2"></i>Create New Collection
            </a>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-custom">
            <thead>
                <tr>
                    <th style="width: 50px;">#</th>
                    <th>Image</th>
                    <th>Title</th>
                    <th>Description</th>
                    <th style="width: 200px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @{ int count = (Model.PageIndex - 1) * Model.PageSize; }
                @foreach (var item in Model.Items)
                {
                    count++;
                    <tr>
                        <td><strong>@count</strong></td>
                        <td>
                            @if (!string.IsNullOrEmpty(item.ImageUrl))
                            {
                                <img src="@item.ImageUrl" alt="@item.Title" style="width: 60px; height: 60px; object-fit: cover; border-radius: 8px;">
                            }
                            else
                            {
                                <span class="text-muted">No image</span>
                            }
                        </td>
                        <td><strong>@item.Title</strong></td>
                        <td>@item.Description</td>
                        <td>
                            <a href="/Admin/Collection/UpdateCollection/@item.CollectionId" class="btn btn-sm btn-admin btn-admin-info me-1">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <a href="/Admin/Collection/DeleteCollection/@item.CollectionId" class="btn btn-sm btn-admin btn-admin-danger"
                               onclick="return confirm('Are you sure you want to delete this collection?')">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @if (!Model.Items.Any())
    {
        <div class="text-center py-5">
            <i class="bi bi-inbox" style="font-size: 4rem; color: #ccc;"></i>
            <p class="text-muted mt-3">No collections found. Create your first collection!</p>
        </div>
    }

    <partial name="_Pagination" model="@Model" />
</div>

