@model IEnumerable<ResultProductDto>
@{
    ViewData["Title"] = "Index";
    int count = 0;
}

<h1>Index</h1>

<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Image</th>
        <th>Product Name</th>
        <th>Description</th>
        <th>Price</th>
        <th>Category</th>
        <th>Actions</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td><img src="@item.ImageUrl" style="height:75px; width:75px"/></td>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>@item.Price TL</td>
            <td>@item.CategoryName</td>
            <td>
                <a href="/Product/DeleteProduct/@item.ProductId" class="btn btn-danger">Sil</a>
                <a href="/Product/UpdateProduct/@item.ProductId" class="btn btn-info">Update</a>
            </td>
        </tr>
    }

</table>

<a href="/Product/CreateProduct/" class="btn btn-primary">Create New Product</a>

