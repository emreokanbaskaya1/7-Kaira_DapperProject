@model CreateCategoryDto
@{
    ViewData["Title"] = "Create Category";
}

<div class="page-header">
    <h2 class="page-title">Create Category</h2>
    <p class="page-subtitle">Add a new product category</p>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="admin-card">
            <div class="card-header-custom">
                <h3 class="card-title-custom">Category Information</h3>
            </div>

            <form method="post">
                <div class="mb-4">
                    <label for="Name" class="form-label fw-bold">
                        <i class="bi bi-tag me-2"></i>Category Name
                    </label>
                    <input type="text" asp-for="Name" class="form-control form-control-lg" 
                           placeholder="Enter category name" required />
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-admin btn-admin-success">
                        <i class="bi bi-check-circle me-2"></i>Save Category
                    </button>
                    <a href="/Admin/Category/Index" class="btn btn-admin btn-secondary">
                        <i class="bi bi-x-circle me-2"></i>Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>

    <div class="col-md-4">
        <div class="admin-card" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white;">
            <h5 class="mb-3"><i class="bi bi-info-circle me-2"></i>Tips</h5>
            <ul class="list-unstyled">
                <li class="mb-2"><i class="bi bi-check2 me-2"></i>Use descriptive names</li>
                <li class="mb-2"><i class="bi bi-check2 me-2"></i>Keep it short and clear</li>
                <li class="mb-2"><i class="bi bi-check2 me-2"></i>Avoid special characters</li>
            </ul>
        </div>
    </div>
</div>
