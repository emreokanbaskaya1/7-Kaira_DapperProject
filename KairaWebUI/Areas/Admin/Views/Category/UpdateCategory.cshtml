@model UpdateCategoryDto
@{
    ViewData["Title"] = "Update Category";
}

<div class="page-header">
    <h2 class="page-title">Update Category</h2>
    <p class="page-subtitle">Edit category information</p>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="admin-card">
            <div class="card-header-custom">
                <h3 class="card-title-custom">Category Information</h3>
            </div>

            <form method="post">
                <input asp-for="CategoryId" type="hidden"/>
                
                <div class="mb-4">
                    <label for="Name" class="form-label fw-bold">
                        <i class="bi bi-tag me-2"></i>Category Name
                    </label>
                    <input type="text" asp-for="Name" class="form-control form-control-lg" 
                           placeholder="Enter category name" required />
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-admin btn-admin-success">
                        <i class="bi bi-check-circle me-2"></i>Update Category
                    </button>
                    <a href="/Admin/Category/Index" class="btn btn-admin btn-secondary">
                        <i class="bi bi-x-circle me-2"></i>Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>

    <div class="col-md-4">
        <div class="admin-card" style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%); color: white;">
            <h5 class="mb-3"><i class="bi bi-pencil-square me-2"></i>Editing</h5>
            <p class="mb-0">You are editing category ID: <strong>#@Model.CategoryId</strong></p>
        </div>
    </div>
</div>


