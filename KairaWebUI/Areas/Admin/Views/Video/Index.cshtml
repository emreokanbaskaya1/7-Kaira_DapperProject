@using KairaWebUI.DTOs.VideoDtos
@using KairaWebUI.Helpers
@model PaginatedList<ResultVideoDto>
@{
    ViewData["Title"] = "Videos";
}

<div class="page-header">
    <h2 class="page-title">Videos</h2>
    <p class="page-subtitle">Manage promotional videos</p>
</div>

<div class="admin-card">
    <div class="card-header-custom">
        <div class="d-flex justify-content-between align-items-center">
            <h3 class="card-title-custom">All Videos</h3>
            <a href="/Admin/Video/CreateVideo/" class="btn btn-admin btn-admin-primary">
                <i class="bi bi-plus-circle me-2"></i>Create New Video
            </a>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-custom">
            <thead>
                <tr>
                    <th style="width: 50px;">#</th>
                    <th>Preview</th>
                    <th>Video URL</th>
                    <th>Background Image</th>
                    <th style="width: 200px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @{ int count = (Model.PageIndex - 1) * Model.PageSize; }
                @foreach (var item in Model.Items)
                {
                    count++;
                    <tr>
                        <td><strong>@count</strong></td>
                        <td>
                            @if (!string.IsNullOrEmpty(item.Url))
                            {
                                <button type="button" class="btn btn-sm btn-outline-danger" 
                                        data-bs-toggle="modal" 
                                        data-bs-target="#videoModal@item.VideoId">
                                    <i class="bi bi-play-circle me-1"></i> Play
                                </button>
                            }
                        </td>
                        <td>
                            <small class="text-muted">@item.Url</small>
                        </td>
                        <td>
                            @if (!string.IsNullOrEmpty(item.BackgroundImageUrl))
                            {
                                <img src="@item.BackgroundImageUrl" alt="Background" 
                                     style="width: 80px; height: 60px; object-fit: cover; border-radius: 8px;">
                            }
                            else
                            {
                                <span class="text-muted">No image</span>
                            }
                        </td>
                        <td>
                            <a href="/Admin/Video/UpdateVideo/@item.VideoId" class="btn btn-sm btn-admin btn-admin-info me-1">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <a href="/Admin/Video/DeleteVideo/@item.VideoId" class="btn btn-sm btn-admin btn-admin-danger"
                               onclick="return confirm('Are you sure you want to delete this video?')">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                    
                    <!-- Video Modal -->
                    <div class="modal fade" id="videoModal@item.VideoId" tabindex="-1" aria-hidden="true">
                        <div class="modal-dialog modal-lg modal-dialog-centered">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title">Video Preview</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body p-0">
                                    @{
                                        var videoId = "";
                                        if (!string.IsNullOrEmpty(item.Url))
                                        {
                                            // YouTube URL'den video ID'sini çýkar
                                            var uri = new Uri(item.Url);
                                            if (uri.Host.Contains("youtube.com"))
                                            {
                                                var query = System.Web.HttpUtility.ParseQueryString(uri.Query);
                                                videoId = query["v"];
                                            }
                                            else if (uri.Host.Contains("youtu.be"))
                                            {
                                                videoId = uri.AbsolutePath.TrimStart('/');
                                            }
                                        }
                                    }
                                    @if (!string.IsNullOrEmpty(videoId))
                                    {
                                        <div class="ratio ratio-16x9" id="videoContainer@item.VideoId">
                                            <iframe id="videoIframe@item.VideoId" 
                                                    src="https://www.youtube.com/embed/@videoId?enablejsapi=1" 
                                                    title="YouTube video" 
                                                    allowfullscreen></iframe>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="p-5 text-center">
                                            <p class="text-muted">Invalid YouTube URL</p>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </tbody>
        </table>
    </div>

    @if (!Model.Items.Any())
    {
        <div class="text-center py-5">
            <i class="bi bi-inbox" style="font-size: 4rem; color: #ccc;"></i>
            <p class="text-muted mt-3">No videos found. Create your first video!</p>
        </div>
    }

    <partial name="_Pagination" model="@Model" />
</div>

<style>
    .modal-content {
        border-radius: 10px;
        overflow: hidden;
    }

    .modal-header {
        background: linear-gradient(135deg, var(--primary-color) 0%, #224abe 100%);
        color: #fff;
        border-bottom: none;
    }

    .modal-header .btn-close {
        filter: invert(1);
    }
</style>

<script>
    // Modal kapanýnca videoyu durdur
    document.addEventListener('DOMContentLoaded', function() {
        var videoModals = document.querySelectorAll('[id^="videoModal"]');
        
        videoModals.forEach(function(modal) {
            modal.addEventListener('hidden.bs.modal', function () {
                var iframe = this.querySelector('iframe');
                if (iframe) {
                    // iframe'i yeniden yükleyerek videoyu durdur
                    var iframeSrc = iframe.src;
                    iframe.src = '';
                    iframe.src = iframeSrc;
                }
            });
        });
    });
</script>
